@model SafetyMapWeb.Models.CrimeStatistics.CrimeStatisticEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Crime Statistic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NeighborhoodId" class="control-label"></label>
                <select asp-for="NeighborhoodId" class="form-control" asp-items="Model.Neighborhoods">
                    <option value="">-- Select Neighborhood --</option>
                </select>
                <span asp-validation-for="NeighborhoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrimeCategoryId" class="control-label"></label>
                <select asp-for="CrimeCategoryId" class="form-control" asp-items="Model.CrimeCategories">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CrimeCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountOfCrimes" class="control-label"></label>
                <input asp-for="CountOfCrimes" class="form-control" />
                <span asp-validation-for="CountOfCrimes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrendPercentage" class="control-label"></label>
                <input asp-for="TrendPercentage" class="form-control" />
                <span asp-validation-for="TrendPercentage" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
